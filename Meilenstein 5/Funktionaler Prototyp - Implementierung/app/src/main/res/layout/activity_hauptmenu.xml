<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sinemkaya.login.Hauptmenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <Button
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:text="Karte"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:id="@+id/karte"
            android:layout_gravity="center_horizontal"
            android:onClick="activity3"
            android:layout_weight="0.34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:textSize="20sp"
                android:id="@+id/routenerstellen"
                android:onClick="activity3"
                android:text="Route erstellen" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wetter"
                android:textSize="20sp"
                android:onClick="activity3"
                android:id="@+id/wetter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="109dp"
                android:layout_height="94dp"
                android:text="Profil-Einstellungen"
                android:onClick="activity3"
                android:id="@+id/profil"
                android:layout_weight="0.17" />

            <Button
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:text="Meine Routen"
                android:id="@+id/meinerouten"
                android:onClick="activity3"
                android:layout_weight="1.09" />

            <Button
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:text="Nachrichten"
                android:onClick="activity3"
                android:id="@+id/nachrichten" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>